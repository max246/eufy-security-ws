{
    "compilerOptions": {
        "lib": ["ES2023", "DOM"],
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "declaration": true,
        //"composite": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "noEmit": false,
        "paths": {
            "got": ["./node_modules/got/dist/source"]
        },
        "jsx": "react-jsx" // Or "react" depending on your version
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "eslint.config.mts"
    ]
}